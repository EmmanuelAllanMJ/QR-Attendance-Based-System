generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ClubMember {
  id          String     @id @default(cuid())
  Username    String  @unique
  RegNo  String  @unique
  Name        String
  VITEmail    String  @unique
  RegisteredFaculty Faculty? @relation(fields: [facultyId], references: [id])
  facultyId   String
  DepartmentPreference_One String?
  DepartmentPreference_Two String?
  WhatsAppNumber String
  Description String?
  Sex         String?
  Department  String?  @db.VarChar(255)
  Designation String? @db.VarChar(255)
  FFCS        Boolean @default(false)
  isAdmin     Boolean @default(false)

  Events      Event[]
  Session     Session[]
  Particpant  Particpant[]

  @@index([facultyId])
}

model Event {
  id                  String                @id @default(cuid())
  Name                String?
  Date                DateTime
  Time                DateTime
  Description         String             @db.VarChar(255)
  Venue               String
  participants        Particpant[]
  ClubMember          ClubMember?        @relation(fields: [clubMemberId], references: [id])
  clubMemberId        String?
  // Faculty             Faculty           @relation(fields: [facultyId], references: [id])
  facultyId           Int?
  StudentCordinator   StudentCordinator? @relation(fields: [studentCordinatorId], references: [id])
  studentCordinatorId Int?

  @@index([studentCordinatorId])
  @@index([clubMemberId])
  @@index([facultyId])
}

model Faculty {
  id     String     @id @default(cuid())
  Name   String
  // Events Event[]
  ClubMember ClubMember[]
}

model StudentCordinator {
  id             Int     @id
  Name           String
  RegisterNumber String
  Phone          Int
  Events         Event[]
}

model Particpant {
  id             String          @id @default(cuid())
  Email          String       @unique
  Name           String
  RegisterNumber String       @unique
  Event          Event?       @relation(fields: [eventId], references: [id])
  eventId        String?
  Attendance     Attendance[]
  ClubMember     ClubMember   @relation(fields: [clubMemberId], references: [id])
  clubMemberId   String
  QR             String       @unique

  @@index([eventId])
  @@index([clubMemberId])
}

model Attendance {
  id           Int        @id @default(autoincrement())
  Date         DateTime
  EntryTime    DateTime
  ExitTime     DateTime
  QR           String     @unique
  particpant   Particpant @relation(fields: [particpantId], references: [id])
  particpantId String @unique

  @@index([particpantId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         ClubMember     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
