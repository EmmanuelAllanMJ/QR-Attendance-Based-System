generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ClubMember {
  id                       String   @id @default(cuid())
  Username                 String   @unique
  RegNo                    String   @unique
  Name                     String
  VITEmail                 String   @unique
  RegisteredFaculty        Faculty? @relation(fields: [facultyId], references: [id])
  facultyId                String
  DepartmentPreference_One String?
  DepartmentPreference_Two String?
  WhatsAppNumber           String
  Description              String?
  Sex                      String?
  Department               String?  @db.VarChar(255)
  Designation              String?  @db.VarChar(255)
  FFCS                     Boolean  @default(false)

  // Events      Event[]
  Session Session[]
  Event   Event[]

  @@index([facultyId])
}

model Event {
  id                  String             @id @unique @default(cuid())
  Name                String?
  Date                DateTime           @default(now())
  StartTime           DateTime           @default(now())
  EndTime             DateTime           @default(now())
  Description         String             @db.VarChar(255)
  Venue               String
  clubMemberId        String?
  facultyId           String?
  studentCordinatorId Int?
  participants        Participant[]
  ClubMember          ClubMember?        @relation(fields: [clubMemberId], references: [id])
  Faculty             Faculty?           @relation(fields: [facultyId], references: [id])
  StudentCordinator   StudentCordinator? @relation(fields: [studentCordinatorId], references: [id])

  @@index([studentCordinatorId])
  @@index([clubMemberId])
  @@index([facultyId])
}

model Faculty {
  id         String       @id @default(cuid())
  Name       String
  // Events Event[]
  ClubMember ClubMember[]
  Event      Event[]
}

model StudentCordinator {
  id             Int     @id
  Name           String
  RegisterNumber String
  Phone          Int
  Events         Event[]
}

model Participant {
  id             String       @id @unique
  Email          String       @unique
  QR             String       @unique
  Name           String
  RegisterNumber String       @unique
  eventId        String?
  Event          Event?       @relation(fields: [eventId], references: [id])
  Attendance     Attendance[]

  @@index([eventId])
}

model Attendance {
  id           Int         @id @default(autoincrement())
  Date         DateTime
  EntryTime    DateTime
  ExitTime     DateTime
  Attended     Boolean
  particpantId String
  particpant   Participant @relation(fields: [particpantId], references: [id])

  @@index([particpantId])
}

model Session {
  id           String     @id @default(cuid())
  sessionToken String     @unique
  userId       String
  expires      DateTime
  user         ClubMember @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
